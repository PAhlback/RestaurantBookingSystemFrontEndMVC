@using RestaurantBookingSystemMVC.Models.MenuItem.DTOs;
@model MenuItemDTO;
@{
    ViewData["Title"] = "Admin Menu Create";
    Layout = "_AdminLayout";
}

<section class="admin-content-window">
    <h3 class="display-3">Create Menu Item</h3>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for=Description class ="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for=Price class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsAvailable"></label>
            <input asp-for=IsAvailable class ="form-check-input" />
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryFK"></label>
            <input asp-for=CategoryFK class="form-control" />
            <span asp-validation-for="CategoryFK" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary">Create</button>
    </form>
</section>
